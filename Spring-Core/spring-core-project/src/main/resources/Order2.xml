<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="payment" class="com.rays.ioc.Payment">
		<constructor-arg value="2000"></constructor-arg>
	</bean>

	<bean id="inventory" class="com.rays.ioc.Inventory">
		<constructor-arg value="50"></constructor-arg>
	</bean>

	<bean id="order2" class="com.rays.ioc.Order">
		<constructor-arg ref="payment"></constructor-arg>
		<constructor-arg ref="inventory"></constructor-arg>
	</bean>

</beans>